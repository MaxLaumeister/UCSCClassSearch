<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmps121.ucsccoursebrowser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cmps121.ucsccoursebrowser.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter android:label="@string/app_name_short">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cmps121.ucsccoursebrowser.ResultsActivity"
            android:label="@string/title_activity_results"
            android:screenOrientation="portrait" 
            android:parentActivityName="com.cmps121.ucsccoursebrowser.MainActivity" >
	        <!-- Parent activity meta-data to support 4.0 and lower -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.cmps121.ucsccoursebrowser.MainActivity" />
        </activity>
        <activity
            android:name="com.cmps121.ucsccoursebrowser.DetailActivity"
            android:label="@string/title_activity_detail"
            android:screenOrientation="portrait"
			android:parentActivityName="com.cmps121.ucsccoursebrowser.ResultsActivity" >
	        <!-- Parent activity meta-data to support 4.0 and lower -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.cmps121.ucsccoursebrowser.ResultsActivity" />
        </activity>
        <activity
            android:name="com.cmps121.ucsccoursebrowser.BookmarkActivity"
            android:label="@string/title_activity_bookmark"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
