<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmps121.ucsccoursebrowser.DetailActivity"
    android:id="@+id/scroll_view" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >
        
    <TextView
        android:id="@+id/textViewCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Course Name"
        android:textSize="20sp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/textViewCourseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewCourseName"
        android:text="Course Time"
        android:textColor="@color/gray" />
    
    <TextView
        android:id="@+id/textViewCourseRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewCourseTime"
        android:text="Course Room"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/textViewInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewCourseRoom"
        android:text="Instructor"
        android:textColor="@color/gray"
        android:paddingBottom="10dp" />
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#cccccc"/>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/textViewInstructor" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dip" >
            
            <TextView
	            android:id="@+id/textViewStatus"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Status"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:paddingRight="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left|center" >
                
                <ImageView
			        android:id="@+id/green_circle_detail"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/green_circle" 
			        android:visibility="gone" />
			    
			    <ImageView
			        android:id="@+id/blue_square_detail"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/blue_square"
			        android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewStatusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="(Status)"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip"
            android:paddingBottom="4dip" >
            
            <TextView
                android:id="@+id/textViewEnrolled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students Enrolled"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="20dp" />
            
            <TextView
                android:id="@+id/textViewEnrolledValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Enrolled)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="10dp" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip"
            android:paddingBottom="4dip" >
            
            <TextView
                android:id="@+id/textViewType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="20dp" />
            
            <TextView
                android:id="@+id/textViewTypeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Type)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="10dp" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip"
            android:paddingBottom="4dip" >
            
            <TextView
                android:id="@+id/textViewCredits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="20dp" />
            
            <TextView
                android:id="@+id/textViewCreditsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Credits)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="10dp" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip" >
            
            <TextView
                android:id="@+id/textViewGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Education"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="20dp" />
            
            <TextView
                android:id="@+id/textViewGEValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(GenEd)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="10dp" />
            
        </TableRow>
    </TableLayout>
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#cccccc"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is placeholder text. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam suscipit nulla sit amet fringilla auctor. Phasellus cursus dolor ultrices enim pellentesque scelerisque."
		android:layout_below="@+id/table_layout"
		android:paddingTop="10dp"
		android:paddingRight="10dp" />

    </LinearLayout>
    
</ScrollView>
